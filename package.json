{
    "name": "whatsapp-api-nodejs",
    "version": "3.0.8",
    "description": "whatsapp-api-nodejs is builton top of Baileys-MD.",
    "main": "server.js",
    "scripts": {
        "start": "yarn build && node lib/server.js",
        "debug": "yarn build && node --inspect-brk lib/server.js",
        "build": "yarn build:tsc && yarn build:ejs",
        "build:tsc": "tsc",
        "build:ejs": "copyfiles -u 1 \"./src/api/views/**/*.ejs\" \"./lib\"",
        "watch": "concurrently \"yarn watch:tsc\" \"yarn sleep && yarn watch:node\"",
        "watch:tsc": "tsc --watch",
        "watch:node": "nodemon --inspect lib/server.js",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "jest",
        "test:watch": "nodemon --verbose --watch ./tests/ --ext ts --exec yarn test",
        "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
        "sleep": "node -e \"setTimeout(() => process.exit(0), 2000)\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "prettier --write",
            "git add"
        ],
        "*.{html,css,less,ejs}": [
            "prettier --write",
            "git add"
        ]
    },
    "repository": "git@github.com:salman0ansari/whatsapp-api-nodejs.git",
    "author": "Mohd Salman Ansari <salman0ansariii@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@adiwajshing/keyed-db": "^0.2.4",
        "@hapi/boom": "^10.0.1",
        "@whiskeysockets/baileys": "^6.5.0",
        "axios": "^1.5.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-exception-handler": "^1.3.62",
        "link-preview-js": "^3.0.5",
        "mongodb": "^6.1.0",
        "multer": "^2.0.0-rc.4",
        "pino": "^8.16.0",
        "pino-http": "^8.5.0",
        "pino-pretty": "^10.2.3",
        "proper-lockfile": "^4.1.2",
        "qrcode": "^1.5.3",
        "qrcode-terminal": "^0.12.0",
        "sharp": "^0.32.6",
        "socket.io": "^4.7.2",
        "uuid": "^9.0.1",
        "websocket-polyfill": "^0.0.3"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.19",
        "@types/jest": "^29.5.5",
        "@types/multer": "^1.4.8",
        "@types/pino-http": "^5.8.2",
        "@types/pino-pretty": "^5.0.0",
        "@types/proper-lockfile": "^4.1.2",
        "@types/qrcode": "^1.5.2",
        "@types/uuid": "^9.0.5",
        "@types/ws": "^8.5.7",
        "@typescript-eslint/eslint-plugin": "^6.7.5",
        "@typescript-eslint/parser": "^6.7.5",
        "concurrently": "^8.2.1",
        "copyfiles": "^2.4.1",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^14.0.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2"
    }
}
