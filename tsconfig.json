{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "lib",
        "declaration": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "lib": ["ES2020", "DOM"]
    },
    "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
    "exclude": ["node_modules/**"]
}
